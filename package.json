{
  "name": "thepushkarp-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn copy:fonts && yarn generate:feeds && vite",
    "build": "yarn copy:fonts && tsc && vite build && yarn generate:feeds && yarn generate:sitemap",
    "preview": "vite preview",
    "copy:fonts": "mkdir -p public/fonts/geist-sans public/fonts/geist-mono && (test -f node_modules/geist/dist/fonts/geist-sans/Geist-Variable.woff2 && cp node_modules/geist/dist/fonts/geist-sans/Geist-Variable.woff2 public/fonts/geist-sans/ && cp node_modules/geist/dist/fonts/geist-mono/GeistMono-Variable.woff2 public/fonts/geist-mono/ || echo 'Fonts already in public/, skipping copy')",
    "generate:feeds": "tsx scripts/generate-feeds.ts",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,mdx,css,scss,sass}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "@microflash/rehype-starry-night": "^7.4.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "@wooorm/starry-night": "^3.8.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "feed": "^5.1.0",
    "geist": "^1.5.1",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.25",
    "lucide-react": "^0.553.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.9.6",
    "rehype-callouts": "^2.1.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-emoji": "^5.0.2",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "remark-toc": "^9.0.0",
    "sugar-high": "^0.9.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vscode-oniguruma": "^2.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "rollup": "^4.53.2",
    "tailwindcss": "3.4.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependenciesMeta": {
    "@wooorm/starry-night@3.8.0": {
      "unplugged": true
    }
  }
}
